<h2>Plan your date</h2>


<%= form_for @event do |f| %>
  <%= fields_for :restaurant, @event.restaurant do |r| %>
    <%= r.hidden_field :yelp_id %>
    <%= r.text_field :name, value: @restaurant.name, readonly: true%>
  <% end %>
  <br>
  <%= @restaurant.street%><br>
  <%= @restaurant.city%>, <%= @restaurant.state%> <%= @restaurant.zip%><br>

  <%= f.date_select :event_start %>

  <%= f.time_select :event_start, {ampm: true, minute_step: 15} %>

  <%= f.collection_select(:group_id, current_user.groups, :id, :name, {prompt: "Choose a group to invite"}) %>

  <%= f.submit "Send Invitation", class: 'btn-success' %>
<% end %>
<div style="overflow:hidden;">
    <div class="form-group">
        <div class="row">
            <div class="col-md-8">
                <div id="datetimepicker12"></div>
            </div>
        </div>
    </div>
    <script type="text/javascript">
        $(function () {
          
            $('#datetimepicker12').datetimepicker({
                inline: true,
                sideBySide: true
            });
        });
    </script>
</div>
