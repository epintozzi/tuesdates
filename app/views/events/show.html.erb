<div class="event-header">
  <div class="col-md-6 event-left">
  </div>
  <div class="col-md-6 event-right">
    <% if @event.event_start.future? %>
      <%= link_to "RSVP", new_restaurant_review_path(@event.restaurant) %>
    <% end %>
    <li><h6>Group</h6><%= @event.group.name %></li>
    <li><h6>Organizer</h6><%= @event.user.first_name %> <%= @event.user.last_name %></li>
    <li><h6>Where</h6><%= @event.restaurant.name %></li>
    <li><%= @event.restaurant.street %></li>
    <li><%= @event.restaurant.city %>, <%= @event.restaurant.state %> <%= @event.restaurant.zip %></li>
    <li><h6>When</h6><%= @event.event_start %></li>
    <h6>Who's Coming?</h6>
    <% @event.group.users.each do |user|%>
      <li>
        <%= user.first_name %> <%= user.last_name %>
      </li>
    <% end %>
    <% if @event.event_start.past? %>
      <%= link_to "Leave a review", new_restaurant_review_path(@event.restaurant) %>
    <% end %>
  </div>
</div>

<div class="container event-reviews-label">
  <h5>Other Tuesdaters Said...</h5>
</div>
<div class="container reviews-list">
  <% @event.restaurant.reviews.each do |review| %>
    <li><%= review.stars %> Stars</li>
    <li><%= review.review_content %></li>
    <li><%= review.user.first_name %> <%= review.user.last_name %></li>
  <% end %>
</div>
