<div class="basic-page-header">
  <h2>My Groups</h2>
</div>
<div class="container">
  <div class="col-md-4">
  </div>
  <div class="col-md-4 group-info">
    <div>
      <div class="my-groups">
        <% @groups.each do |group| %>
            <li><%= link_to group.name, group_path(group) %></li>
        <% end %>
      </div>
    </div>
    <%= link_to new_group_path do %>
      <button type="button" class="btn btn-success">Create new group</button>
    <% end %>
  </div>
  <div class="col-md-4">
  </div>
</div>
