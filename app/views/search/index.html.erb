
<div class="search-header">
  <div class="form-group search-form">
    <h3 id="search-text">Enter search terms to see your results</h3>
    <%= form_tag :search, method: :get, class: "form-inline" do %>
      <%= text_field_tag :term, nil, placeholder: "search by restaurant or cuisine", class: "form-control"%>
      <%= text_field_tag :location, nil, placeholder: "city or zipcode", class: "form-control"%>
      <%= submit_tag "Search", class: "btn btn-success" %>
    <% end %>
  </div>
</div>

<div class="container search-label">
  <h5>Search Results</h5>
</div>
<div class="container search-results">
  <% @restaurants.each do |restaurant| %>
    <div class="row restaurant-info">
      <div class="col-md-3">
        <ul>
          <li class="rest-name"><%=restaurant.name%></li>
          <li><%= restaurant.location.address[0]%></li>
          <li><%= restaurant.location.city%>, <%= restaurant.location.state_code%> <%= restaurant.location.postal_code %></li>
        </ul>
      </div>
      <div class="col-md-4">
        <ul>
          <li><%= restaurant.rating%> on Yelp</li>
          <% if Restaurant.count_past_events_at_restaurant(restaurant) > 0%>
            <li>
              <%= Restaurant.count_past_events_at_restaurant(restaurant)%> other Tuesdaters have eaten here
            </li>
          <% else %>
            <li>Be the first Tuesdater to eat here</li>
          <% end %>
          <li>
            <% if !Restaurant.has_reviews?(restaurant)%>
              <li>There are no reviews for this restaurant</li>
            <% else %>
              <%= link_to "See Reviews", restaurant_reviews_path(Restaurant.find_restaurant_from_yelp_response(restaurant)) %>
            <% end %>
          </li>
        </ul>
      </div>
      <div class="col-md-2">
        <%= link_to new_event_path(yelp_id: restaurant.id, restaurant_name: restaurant.name, street: restaurant.location.address[0], city: restaurant.location.city, state: restaurant.location.state_code, zip: restaurant.location.postal_code) do %>
          <button type="button" class="btn btn-success create-event">
            +
          </button>

        <% end %>
      </div>
      <div class="col-md-3-offset">
      </div>
    </div>
  <% end %>

</div>
